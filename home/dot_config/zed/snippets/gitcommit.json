{
  "conventional commit": {
    "prefix": "cc",
    "body": ["$1($2): $3", "", "$0"]
  },
  "fix conventional commit": {
    "prefix": "fix",
    "body": ["fix($1): $2", "", "$0"]
  },
  "feat conventional commit": {
    "prefix": "feat",
    "body": ["feat($1): $2", "", "$0"]
  },
  "build conventional commit": {
    "prefix": "build",
    "body": ["build($1): $2", "", "$0"]
  },
  "chore conventional commit": {
    "prefix": "chore",
    "body": ["chore($1): $2", "", "$0"]
  },
  "ci conventional commit": {
    "prefix": "ci",
    "body": ["ci($1): $2", "", "$0"]
  },
  "docs conventional commit": {
