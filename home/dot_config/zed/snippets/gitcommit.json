  "breaking change conventional commit footer": {
    "prefix": "BREAK",
    "body": ["BREAKING CHANGE: $0"]
  },
  "co-authored by": {
    "prefix": "co",
    "body": ["Co-authored-by: $1 <$2>", "$0"]
